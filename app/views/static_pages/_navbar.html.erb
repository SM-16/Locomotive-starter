
<header class="w-full fixed z-50 px-5 lg:pb-0 pb-2  lg:h-[100px] h-[300px] flex lg:flex-row flex-col items-center *:font-semibold border-b text-slate-800 bg-white">
    <nav class="flex lg:flex-row flex-col items-center gap-5 h-full">
        <%= link_to  root_path, class:"font-bold text-lg text-gradient w-10" do%>
            <%= image_tag("/icon(16).png")%>    
        <%end%>
        <a class="link link-hover" title="Home" href="#home">Home</a>
        <a class="link link-hover" title="Pricing" href="#pricing">Pricing</a>
        <a class="link link-hover" title="Blog" href="https://rails-elements-waitlist.mmntm.page/">Blog</a>
        
        
        
        
    </nav>
    <div class="w-full flex lg:flex-row flex-col lg:justify-end items-center gap-5 lg:mr-0 md:mr-10 ">
        <%if user_signed_in?%>
            <% if current_user.plan =="starter"%>
                <%= link_to "Documentation", documentation_docs_page_path%>
            <% elsif current_user.plan =="premium"%>
                <%= link_to "Documentation", documentation_docs_page_updated_path%>
            <%else%>
                <%= link_to "Documentation", documentation_docs_page_free_path%>
            <%end%>
            <p class="border border-red-300 bg-red-100 text-red-500 rounded-md px-3 p-1">
                <%= current_user.plan%>
            </p>
            <%= button_to "Log out", destroy_user_session_path, method: :delete%>            
        <%else%>
            <%= link_to "Log In", new_user_session_path%>
            <%= link_to "Sign Up", new_user_registration_path%>
            
        <%end%>
    </div>
</header>
